<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>

	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />
	<constant name="struts.i18n.reload" value="true" />
	<constant name="struts.configuration.xml.reload" value="true" />

	<package name="default" namespace="/" extends="json-default">
	
		<interceptors>
			<interceptor name="logging" class="com.biblio.interceptors.LoggingInterceptor"/>
			<interceptor-stack name="customStack">
				<interceptor-ref name="defaultStack"/>
				<interceptor-ref name="logging"/>
			</interceptor-stack>
		</interceptors>
		
		<default-interceptor-ref name="customStack"/>
	
		<default-action-ref name="index" />

		<global-results>
			<result name="error">/views/error.jsp</result>
		</global-results>

		<global-exception-mappings>
			<exception-mapping exception="java.lang.Exception"
				result="error" />
		</global-exception-mappings>
		
		<action name="index">
			<result>/views/index.jsp</result>
		</action>
		
		<action name="hello-form" class="com.biblio.actions.HelloForm">
			<result name="success">/views/hello-world.jsp</result>
		</action>
		
		<action name="hello-world" class="com.biblio.actions.HelloWorld">
			<result name="success">/views/hello-world.jsp</result>
			<result name="input">/views/hello-world.jsp</result>
		</action>
		
		<action name="hello-json" class="com.biblio.actions.HelloWorld">
			<result name="input" type="json"/>

		</action>
		<action name="view-code">
			<result name="success" type="plainText">/views/hello-world.jsp</result>
		</action>
		
		<action name="*" class="com.opensymphony.xwork2.ActionSupport">
            <result>/views/{1}.jsp</result>
        </action>
	</package>

</struts>